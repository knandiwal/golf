<form id="edit-waypoint" class="modal hide fade form-horizontal">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">Ã—</button>
		<h3>
			Edit Waypoint
		</h3>
	</div>
	<div class="modal-body">
		<div class="control-group">
			<label class="control-label" for="inputWaypointName">Name</label>
			<div class="controls">
				<input type="text" placeholder="Waypoint Name" name="name" id="inputWaypointName" value="{{name}}">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="inputWaypointDescription">Description</label>
			<div class="controls">
				<textarea name="description" id="inputWaypointDescription">{{description}}</textarea>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">Image</label>
			<div class="controls" data-image-chooser>
				{{> imageChooser}}
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">Location</label>
			<div class="controls" data-location-chooser>
				{{> locationChooser}}
			</div>
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn" data-dismiss="modal">Cancel</button>
		<button type="submit" class="btn btn-primary"><i class="icon-save"></i> Save</button>
	</div>
</form>
