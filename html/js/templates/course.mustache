{{> nav}}
<div class="container">	
	<h1><i class="icon-flag"></i> {{name}}</h1>
	<table class="table table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>Hole Name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{{#holes}}
				{{> hole}}
			{{/holes}}
		</tbody>
	</table>
	<div class="form-actions">
		<a class="btn btn-primary" href="#add-hole" role="button" data-toggle="modal"><i class="icon-plus"></i> Add</a>
	</div>
</div>
<form id="add-hole" class="modal hide fade form-horizontal" role="dialog">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal">Ã—</button>
		<h3>
			Add Hole
		</h3>
	</div>
	<div class="modal-body">
		<div class="control-group">
			<label class="control-label" for="inputName">Name</label>
			<div class="controls">
				<input type="text" placeholder="Hole Name" name="name" id="inputName">
			</div>
		</div>
		<div class="control-group">
			<label class="control-label" for="inputPar">Par</label>
			<div class="controls">
				<input type="number" name="par" id="inputPar">
			</div>
		</div>
		
		<ul class="nav nav-tabs">
			{{#waypoints}}
				<li class="{{active}}"><a href="#waypoint-{{idx}}" data-toggle="tab">{{name}}</a></li>
			{{/waypoints}}
			<li><a href="#add-waypoint"><i class="icon-plus"></i> Add</a></li>
		</ul>
		
		<div class="tab-content">
			{{#waypoints}}
				{{> waypoint}}
			{{/waypoints}}
		</div>
	</div>
	<div class="modal-footer">
		<button type="button" class="btn" data-dismiss="modal">Cancel</button>
		<button type="submit" class="btn btn-primary"><i class="icon-save"></i> Save</button>
	</div>
</form>
